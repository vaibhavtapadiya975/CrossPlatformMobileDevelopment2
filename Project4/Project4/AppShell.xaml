<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project4"
    Shell.FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:Project4.Views">
    <TabBar>
        <Tab Title="Calculator" >
            <ShellContent
                Title="Calculator"
                ContentTemplate="{DataTemplate views:CalculatorDisplay}"
                Route="MainPage" />
        </Tab>
        <Tab Title="History">
            <ShellContent
                Title="History"
                ContentTemplate="{DataTemplate views:History}"
                Route="History" />
        </Tab>
    </TabBar>

</Shell>
